<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="ERROR">
    <Appenders>
        <Console name="Console" target="System.out">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss} %5level -%msg%n"/>
        </Console>
        <RollingFile name="File" fileName="logs/log.txt" filePattern="logs/%d{dd-MM-yyyy}/%d{dd-MM-yyyy_HH-mm}.txt">
            <PatternLayout pattern="%d{dd-MM-yyyy HH:mm:ss} %5level %logger{3} %M -%msg%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="30KB"/>
            </Policies>
            <DefaultRolloverStrategy max="10"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="File"/>
        </Root>
    </Loggers>
</Configuration>